<!DOCTYPE html>
<html lang="en">
<head>
  <title>Javascript Store Homepage</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="js/tests.js"></script>
  <link href="css/style.css" rel="stylesheet">
</head>
<body>

<!-- Menu -->
  <nav class="navbar navbar-expand-sm fixed-top px-4 bg-white">
    <div class="container-fluid">
      <a class="navbar-brand" href="/home">
        <img src="https://via.placeholder.com/120x120/" class="mx-auto d-block">
      </a>
      <div class="collapse navbar-collapse" id="mynavbar">
        <ul class="navbar-nav me-auto">
        </ul>
        <div class="d-flex">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <img src="../img/user.png" width="50" class="mx-auto d-block px-1">
                </li>
                <li class="nav-item">
                    <img src="../img/shopping-cart.png" width="50" class="mx-auto d-block px-1">
                </li>
            </ul>
        </div>
      </div>
    </div>
  </nav>

<!-- Page title -->
<div class="container-fluid p-5 text-center" style="margin-top: 150px;">
  <h1>Store Name</h1>
  <p>Be healthy with us</p> 
</div>


<!-- Products Container -->
<div class="container mt-5">
    <div class="row">

      <% homePageProducts.forEach(function(product) { %>
        <div class="col-sm-4 col-6 p-3 product-item">
            <a href="product-page.html">
                <img src="<%= product.productImage %>"np class="mx-auto d-block" style="width:75%">
                <h3><%= product.productName %></h3>
                <p><%= product.productDescription %></p>
                <p><%= product.productPrice %></p>
            </a>
            <button type="button" pid="" class="btn btn-outline-success mx-auto d-block">Add to Cart</button>
        </div>
      <% }); %>
    </div> 
</div>

</body>
</html>
